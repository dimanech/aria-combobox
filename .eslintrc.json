{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "accessor-pairs": 2,
    "array-bracket-spacing": 2,
    "array-callback-return": 2,
    "block-scoped-var": 2,
    "brace-style": 2,
    "callback-return": 2,
    "camelcase": 2,
    "comma-dangle": [2, "never"],
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-style": [2, "last"],
    "consistent-return": 0,
    "curly": 2,
    "default-case": 0,
    "dot-notation": [2, { "allowKeywords": false }],
    "eol-last": 2,
    "eqeqeq": 2,
    "func-call-spacing": 2,
    "handle-callback-err": 2,
    "indent": [2, "tab", {"SwitchCase": 1}],
    "key-spacing": 2,
    "keyword-spacing": 2,
    "linebreak-style": 2,
    "max-depth": [2, 3],
    "max-len": [2, 120],
    "max-nested-callbacks": [2, 5],
    "max-params": [2, 5],
    "max-statements":[2, 60],
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-console": [2, {"allow": ["warn", "error", "log"]}],
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-parens": 0,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-mixed-requires": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": 2,
    "no-new-wrappers": 2,
    "no-return-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": 2,
    "no-useless-return": 2,
    "one-var-declaration-per-line": [2, "always"],
    "operator-linebreak": 2,
    "padded-blocks": [2, "never"],
    "quote-props": [2, "consistent"],
    "quotes": [2, "single"],
    "semi": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": 0,
    "space-infix-ops": 2,
    "strict": 2,
    "use-isnan": 2
  },
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	}
}
